<Window x:Class="FishMessenger.Message"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FishMessenger"
        mc:Ignorable="d"
        Title="User - Message" Height="325" Width="500" Closing="Window_Closing" WindowStartupLocation="CenterScreen">
    <Grid>
        <Rectangle VerticalAlignment="Top" Height="50">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF5BBFFF"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle VerticalAlignment="Top" Height="50" Fill="White" Opacity="0.5"/>
        <Image x:Name="PFP" HorizontalAlignment="Left" Height="48" VerticalAlignment="Top" Width="48" Source="/usertile1.png" Margin="5,5,0,0"/>
        <Label x:Name="Username" Content="USERNAME" HorizontalAlignment="Left" Margin="54,5,0,0" VerticalAlignment="Top" Padding="5,0,0,0" FontSize="16"/>
        <Label x:Name="Icon" Content="" HorizontalAlignment="Right" Margin="54,63,11,0" VerticalAlignment="Top" Padding="0" FontSize="16" Panel.ZIndex="1" Foreground="#FF5D5D5D"/>
        <TextBlock x:Name="Home_Status" VerticalAlignment="Top" Margin="54,25,0,0" Text="▨ Busy" TextTrimming="CharacterEllipsis" Foreground="#FFD8A83F" Padding="5,0,0,0"/>
        <TextBox x:Name="MessageBlock" Margin="5,60,6,31" Text="mess" BorderThickness="2" IsReadOnly="True" TextWrapping="Wrap"/>
        <Button Content="Reply" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,6,5" Width="45"/>
        <Button Content="👍" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,86,5" Width="25" Click="Button_Click"/>
        <Button Content="👎" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,56,5" Width="25" Click="Button_Click_1"/>
    </Grid>
</Window>
