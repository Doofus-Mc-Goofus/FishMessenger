<Window x:Class="FishMessenger.Client"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FishMessenger"
        mc:Ignorable="d"
        Title="Fish Messenger Client" Height="450" Width="800" Closing="Window_Closing">
    <Grid>
        <Rectangle x:Name="Home_GradRect" VerticalAlignment="Top" Height="75" Fill="#FF5BBFFF">
            <Rectangle.OpacityMask>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#CC000000"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.OpacityMask>
        </Rectangle>
        <Menu VerticalAlignment="Top" Height="18">
            <MenuItem Header="Chat" Padding="7,0,8,3" Margin="0,0,0,0">
                <MenuItem Header="Clear" Click="MenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Server" Padding="7,0,8,3" Margin="0,0,0,0">
                <MenuItem x:Name="BookmarkMenuItem" Header="Bookmark"  Click="MenuItem_Click_1"/>
                <MenuItem Header="Disconnect" Click="MenuItem_Click_2"/>
            </MenuItem>
            <MenuItem Header="Members" Padding="7,0,8,3" Margin="0,0,0,0">
                <MenuItem Header="Member List" Click="MemList_Click"/>
            </MenuItem>
        </Menu>
        <TextBlock x:Name="Home_Username" VerticalAlignment="Top" Margin="15,29,15,0" Text="Server Title" FontSize="17" TextTrimming="CharacterEllipsis"/>
        <WrapPanel x:Name="MainPanel" HorizontalAlignment="Right" Margin="0,29,15,15" VerticalAlignment="Top">
            <TextBlock x:Name="Home_Status" VerticalAlignment="Center" Text="■ Online" TextTrimming="CharacterEllipsis" Foreground="#FF24980C" TextAlignment="Right" HorizontalAlignment="Right" Margin="6,0,0,0"/>
            <Grid Width="6"/>
            <Button x:Name="EditRoom" Content="Edit Room" HorizontalAlignment="Right" VerticalAlignment="Top" Padding="5,1,5,1" Margin="6,0,0,0" Visibility="Collapsed"/>
            <Button x:Name="Pin" Content="Bookmark" HorizontalAlignment="Right" VerticalAlignment="Top" Padding="5,1,5,1" Margin="6,0,0,0" Click="Pin_Click"/>
            <Button x:Name="Invite" Content="Invitations" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="6,0,0,0" Padding="5,1,5,1" Visibility="Collapsed"/>
            <Button x:Name="MemList" Content="Member List" HorizontalAlignment="Right" VerticalAlignment="Top" Padding="5,1,5,1" Margin="6,0,0,0" Click="MemList_Click"/>
        </WrapPanel>
        <ListBox x:Name="ChatBox" Margin="15,60,15,59" HorizontalContentAlignment="Stretch">
            <WrapPanel x:Name="Sample_Serv" HorizontalAlignment="Left">
                <TextBlock Text="Server Message" TextWrapping="Wrap" Foreground="Gray" FontStyle="Italic"/>
            </WrapPanel>
            <WrapPanel x:Name="Sample_Error" HorizontalAlignment="Left">
                <TextBlock Text="Server Error" TextWrapping="Wrap" Foreground="IndianRed" FontStyle="Italic"/>
            </WrapPanel>
            <Grid>
                <WrapPanel x:Name="Sample1_Recieve" HorizontalAlignment="Left" Margin="0,0,140,0">
                    <TextBlock Text="User: " FontWeight="Bold"/>
                    <TextBlock Text="Message" TextWrapping="Wrap"/>
                </WrapPanel>
                <TextBlock Text="11/11/1111 11:11:11 PM" Foreground="Gray" Margin="0,0,2,0" HorizontalAlignment="Right"/>
            </Grid>
        </ListBox>
        <TextBox x:Name="TheChatBoxSender" Margin="15,0,66,25" VerticalAlignment="Bottom" Height="22" FontStyle="Italic" Foreground="#FF202020" Padding="0" VerticalContentAlignment="Center" Text="" MaxLength="500" TextChanged="TheChatBoxSender_TextChanged" KeyUp="TheChatBoxSender_KeyUp"/>
        <Button x:Name="SendButton" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,15,25" Content="Send" Padding="5,1,5,1" Height="22" Width="41" Click="SendButton_Click"/>
        <TextBlock x:Name="CharLimit" Text="" VerticalAlignment="Bottom" Margin="15,0,15,5" FontStyle="Italic" Foreground="Gray"/>
    </Grid>
</Window>
