<Window x:Class="FishMessenger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Fish Messenger Betta" Height="480" Width="640" Closing="Window_Closing" Closed="Window_Closed" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid x:Name="Loading" Panel.ZIndex="0" Visibility="Hidden">
            <Image Source="/5039.png" Stretch="Fill" Opacity="1" Margin="-20,0,-20,0"/>
            <Image x:Name="LoadingSirc" Source="/loadingcircle/tile000.png" Stretch="None" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-20,0,0">
                <Image.Effect>
                    <DropShadowEffect ShadowDepth="0" Opacity="0.6" BlurRadius="4"/>
                </Image.Effect>
            </Image>
            <Label Content="Signing out..." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="White" Margin="0,30,0,0">
                <Label.Effect>
                    <DropShadowEffect ShadowDepth="2" Opacity="0.4" BlurRadius="2"/>
                </Label.Effect>
            </Label>
        </Grid>
        <Grid x:Name="HomePage">
            <Rectangle x:Name="Home_GradRect" VerticalAlignment="Top" Height="75" Fill="#FF5BBFFF">
                <Rectangle.OpacityMask>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.OpacityMask>
            </Rectangle>
            <Menu x:Name="MenuBar" VerticalAlignment="Top" Height="18">
                <MenuItem Header="Fish" Padding="7,0,8,3" Margin="0,0,0,0" Click="MenuItem_SubmenuOpened" Visibility="Collapsed"/>
                <MenuItem Header="Profile" Padding="7,0,8,3" Margin="0,0,0,0">
                    <MenuItem Header="Customize" Click="EditProf_Click"/>
                    <MenuItem Header="Sign out" Click="MenuItem_Click_1"/>
                </MenuItem>
                <MenuItem Header="Server" Padding="7,0,8,3" Margin="0,0,0,0">
                    <MenuItem Header="Add a server" Click="ConnectServer_Click"/>
                    <MenuItem Header="Connection settings" Click="ConnectSettings_Click" Visibility="Collapsed"/>
                </MenuItem>
                <MenuItem Header="Help" Padding="7,0,8,3" Margin="0,0,0,0">
                    <MenuItem Header="About Fish Messenger" Click="MenuItem_Click"/>
                </MenuItem>
            </Menu>
            <Image x:Name="Home_PFP" Source="/usertile1.png" HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Height="64" Margin="15,29,0,0"/>
            <TextBlock x:Name="Home_Username" VerticalAlignment="Top" Margin="89,29,15,0" Text="WWWWWWWWWWWWWWWWWWWW" FontSize="16" TextTrimming="CharacterEllipsis"/>
            <TextBlock x:Name="Home_Realname" VerticalAlignment="Top" Margin="89,49,15,0" Text="WWWWWWWWWWWWWWWWWWWW#12345" TextTrimming="CharacterEllipsis" Foreground="Black" FontFamily="Segoe UI Semilight"/>
            <TextBlock x:Name="Home_Status" VerticalAlignment="Top" Margin="89,64,15,0" Text="■ Online" TextTrimming="CharacterEllipsis" Foreground="#FF24980C" HorizontalAlignment="Left"/>
            <TabControl Margin="15,104,15,10">
                    <TabItem Header="Servers">
                        <ListView x:Name="Home_ServerBox" BorderThickness="0" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                    </TabItem>
                    <TabItem x:Name="Home_MessagesTab" Header="Messages" Visibility="Collapsed">
                        <ListView x:Name="Home_MessageBox" BorderThickness="0" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                    </TabItem>
                </TabControl>
            <WrapPanel HorizontalAlignment="Right" Margin="0,29,15,0" VerticalAlignment="Top">
                <Button x:Name="EditProf" Content="Edit Profile" HorizontalAlignment="Right" Margin="6,0,0,0" VerticalAlignment="Top" Padding="5,1,5,1" Click="EditProf_Click"/>
            </WrapPanel>
        </Grid>
        <Grid x:Name="LoginPage" Margin="0,-15,0,0" Visibility="Hidden">
            <Rectangle x:Name="Login_GradRect" VerticalAlignment="Top" Height="75" Fill="#FF5BBFFF">
                <Rectangle.OpacityMask>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.OpacityMask>
            </Rectangle>
            <Image x:Name="Login_PFP" Source="/usertile1.png" HorizontalAlignment="Left" VerticalAlignment="Top" Width="64" Height="64" Margin="15,29,0,0"/>
            <TextBlock x:Name="Login_Username" VerticalAlignment="Top" Margin="89,29,15,0" Text="Welcome USERNAME!" FontSize="16" TextTrimming="CharacterEllipsis"/>
            <TextBlock x:Name="Login_Realname" VerticalAlignment="Top" Margin="89,49,15,0" Text="Please sign in to continue." TextTrimming="CharacterEllipsis" Foreground="Black"/>
            <Label x:Name="PasswordHeader" Content="Password:" Margin="15,107,0,0" FontFamily="Segoe UI Semibold" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="0,0,0,0"/>
            <TextBox x:Name="PasswordBox" Margin="15,130,15,0" Height="22" VerticalAlignment="Top" MaxLength="20" Padding="0,0,0,0" VerticalContentAlignment="Center"/>
            <CheckBox x:Name="LoginCheck" Margin="15,162,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Stay signed in"/>
            <Label x:Name="UsernameError" Content="" Margin="15,187,0,0" FontFamily="Segoe UI Semibold" Padding="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FFD83F3F"/>
            <Button x:Name="Login" Content="Sign In" HorizontalAlignment="Right" Margin="0,0,15,15" VerticalAlignment="Bottom" Width="70" Click="Login_Click"/>
        </Grid>
    </Grid>
</Window>
